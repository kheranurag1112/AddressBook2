@using System.Data
@model DataTable

<!-- BEGIN CONTENT -->
<div class="page-content-wrapper">
    <!-- BEGIN CONTENT BODY -->
    <div class="page-content">
        <!-- BEGIN PAGE TITLE-->
        <h1 class="page-title">
        </h1>
        <!-- END PAGE TITLE-->
        <!-- END PAGE HEADER-->

        <div class="row">
            <div class="col-md-12">
                <!-- BEGIN EXAMPLE TABLE PORTLET-->
                <div class="portlet light portlet-fit bordered">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="icon-settings font-red"></i>

                            <span class="caption-subject font-red sbold uppercase">Contact Table</span>
                        </div>
                       
                    </div>

                </div>
                <div class="portlet-body">
                    <div class="table-toolbar">
                        <div class="row">
                            <div class="col-md-12">
                                <!-- BEGIN EXAMPLE TABLE PORTLET-->
                                <div class="portlet light bordered">
                                    <div class="portlet-title">
                                        <div class="caption font-dark">
                                            <i class="icon-settings font-dark"></i>
                                            <span class="caption-subject bold uppercase">Contact</span>

                                           
                                        </div>
                                        <div class="actions" >
                                            <a asp-controller="Con_Contact" asp-action="Add" class="btn btn-primary">Add Contact</a>
                                        </div>
                                        <div class="tools"> </div>
                                    </div>
                                    <div class="portlet-body table-both-scroll">
                                       
                                        <div class="portlet-body">
                                            <div class="pull-right">
                                                <div id="sample_4_filter" class="dataTable_filter">
                                                    <label><b>Search &nbsp;</b><input type="text" class="form-control input-sm input-small input-inline" placeholder="" id="sample_4" aria-controls="sample_4" /></label>
                                                </div>
                                            </div>
                                        </div>
                                        <br /><br /><br />
                                        <br /><br /><br />
                                        <div style="overflow-x :auto">
                                            <table class="table table-striped table-bordered table-hover order-column" id="sample_4">
                                                <thead>
                                                    <tr class="text-center">

                                                        <th scope="col">ContactName</th>
                                                        <th scope="col">ContactNumber</th>

                                                        <th scope="col">ContactEmail</th>
                                                        <th scope="col">ContactLinkdin</th>
                                                        <th scope="col">ContactTweeter</th>
                                                        <th scope="col">CountryName</th>
                                                        <th scope="col">StateName</th>
                                                        <th scope="col">CityName</th>
                                                        <th scope="col">CreateDate</th>
                                                        <th scope="col">ModifiedDate</th>
                                                        <th scope="col">Delete</th>
                                                        <th scope="col">Edit</th>
                                                    </tr>
                                                </thead>
                                                <tbody id="sample_2" class="">
                                                    @foreach (DataRow datarow in Model.Rows)
                                                    {
                                                        <tr>


                                                            <td scope="col">@datarow["ContactName"]</td>
                                                            <td scope="col">@datarow["ContactNumber"]</td>

                                                            <td scope="col">@datarow["ContactEmail"]</td>
                                                            <td scope="col">@datarow["ContactLinkdin"]</td>
                                                            <td scope="col">@datarow["ContactTweeter"]</td>
                                                            <td scope="col">@datarow["CountryName"]</td>
                                                            <td scope="col">@datarow["StateName"]</td>
                                                            <td scope="col">@datarow["CityName"]</td>
                                                            <td scope="col">@Convert.ToDateTime(datarow["CreateDate"]).ToString("dd-mm-yyyy")</td>
                                                            <td scope="col">@Convert.ToDateTime(datarow["ModifiedDate"]).ToString("dd-mm-yyyy")</td>

                                                            <td class="col text-light">
                                                                <Form method="post" asp-action="delete">
                                                                    <input type="hidden" name="ContactID" value="@Convert.ToInt32(datarow["ContactID"])">
                                                                    <button type="submit" class="btn btn-danger">
                                                                        Delete
                                                                    </button>
                                                                </Form>

                                                            </td>
                                                            <td>
                                                                <Form method="post" asp-controller="Con_Contact" asp-action="Add">
                                                                    <input type="hidden" name="ContactID" value="@Convert.ToInt32(datarow["ContactID"])" />
                                                                    <button type="submit" class="btn btn-success ">
                                                                        Edit
                                                                    </button>
                                                                </Form>
                                                            </td>

                                                        </tr>
                                                    }

                                                </tbody>
                                            </table>

                                        </div>

                                        
                                    </div>
                                </div>
                            </div>
                            <!-- END EXAMPLE TABLE PORTLET-->
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>
</div>




<!-- END CONTENT BODY -->
<!-- END CONTENT -->
@section Scripts
    {
    <script>
        $(document).ready(function () {
            $("#sample_4").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#sample_2 tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });

            });
        });
    </script>
    }
